<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.cowin.vaccinateme.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_info"
            app:destination="@id/infoFragment" />
    </fragment>

    <fragment
        android:id="@+id/infoFragment"
        android:name="com.cowin.vaccinateme.ui.home.InfoFragment"
        android:label="About"
        tools:layout="@layout/fragment_info"/>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.cowin.vaccinateme.ui.centers.CentersFragment"
        android:label="@string/title_centers"
        tools:layout="@layout/fragment_centers" >
        <action
            android:id="@+id/action_navigation_dashboard_to_sessions2"
            app:destination="@id/sessions2" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.cowin.vaccinateme.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_navigation_notifications_to_addLocationFragment"
            app:destination="@id/addLocationFragment" />
    </fragment>

    <fragment
        android:id="@+id/addLocationFragment"
        android:name="com.cowin.vaccinateme.ui.location.AddLocationFragment"
        android:label="Add Pin Code"
        tools:layout="@layout/fragment_add_location" />

    <fragment
        android:id="@+id/sessions2"
        android:name="com.cowin.vaccinateme.ui.sessions.Sessions"
        android:label="Vaccine Sessions"
        tools:layout="@layout/fragment_sessions" >
        <argument
            android:name="sessionId"
            app:argType="string" />
    </fragment>

</navigation>