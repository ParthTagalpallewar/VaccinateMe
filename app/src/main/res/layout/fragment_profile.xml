<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="@string/test_ad_unit_id_banner" />

    <LinearLayout
        android:id="@+id/pincodeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"

            android:text="Pincode"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/profile_tv_showPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:hint="Not Available"
            android:textSize="20dp" />

    </LinearLayout>


    <Button
        android:background="@drawable/button"
        android:id="@+id/profile_btn_addPin"
        android:layout_below="@id/pincodeLayout"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:text="Add Pincode"
        android:textColor="@color/colorwhite"
        android:textSize="20dp" />



    <ImageView
        android:id="@+id/visionary"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/visionary"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>